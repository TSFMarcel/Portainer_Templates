{
  "templates": [
    {
      "type": 3,
      "title": "Vaultwarden + PostgreSQL Kundenspezifisch",
      "description": "Vaultwarden inkl. PostgreSQL Datenbank. Achtung!!! Funktioniert nur wenn vorher der NGINX Proxy Manager installiert wurde.",
      "platform": "linux",
      "categories": ["security", "password-manager", "proxy"],
      "logo": "",
      "repository": {
        "url": "https://github.com/TSFMarcel/Portainer_Templates",
        "stackfile": "vaultwarden/docker-compose_kunden.yml"
      },
      "env": [
          {
          "name": "KUNDENNAME",
          "label": "Kundenname",
          "default": "Kunde123",
          "description": "Der Kundenname"
        },
        {
          "name": "POSTGRES_USER",
          "label": "PostgreSQL USER",
          "default": "vaultwarden_user",
          "description": "Benutzername für die Datenbank."
        },
        {
          "name": "POSTGRES_DB",
          "label": "PostgreSQL Datenbank",
          "default": "vaultwarden_db",
          "description": "Datenbankname der festgelegt werden soll."
        },
        {
          "name": "POSTGRES_PASSWORD",
          "label": "PostgreSQL Password",
          "default": "vaultwardenpass",
          "description": "Starkes Passwort für die Datenbank."
        },
        {
          "name": "ADMIN_TOKEN",
          "label": "Vaultwarden Admin Token",
          "default": "changeme",
          "description": "Admin-Token für Vaultwarden. Nicht hardcoded lassen!"
        },
        {
          "name": "PUSH_ENABLED",
          "label": "Push Notification (z.B. Smartphone) einschalten.",
          "default": "false",
          "description": "Achtung hierfür wird eine ID und ein KEY, diesen bekommt man hier: https://bitwarden.com/host/"
        },
        {
          "name": "PUSH_INSTALLATION_ID",
          "label": "Notification ID wie erwähnt.",
          "default": "",
          "description": "Zu bekommen hier: https://bitwarden.com/host/"
        },
        {
          "name": "PUSH_INSTALLATION_KEY",
          "label": "Notification KEY wie erwähnt.",
          "default": "",
          "description": "Zu bekommen hier: https://bitwarden.com/host/"
        },
        {
          "name": "PUSH_RELAY_URI",
          "label": "Push Relay URI",
          "default": "https://api.bitwarden.eu",
          "description": "Sollte immer https://api.bitwarden.eu sein"
        },
        {
          "name": "PUSH_IDENTITY_URI",
          "label": "Push Identity URI",
          "default": "https://identity.bitwarden.eu",
          "description": "Sollte immer https://identity.bitwarden.eu sein"
        },
        {
          "name": "DOMAIN_VAULTWARDEN",
          "label": "Öffentlicher Domainname der verwendet werden soll.",
          "default": "https://passwordmanager.domain.de",
          "description": "Muss mit https:// eingetragen werden."
        }
      ],
      "administrator_only": true,
      "predeploy": "docker network create nginx-proxy-network"
    }
  ]
}
